# Redirect from .index.html to specific page names for landing

# with one section and no subsections, i. e. docs/platform/platform.html
/docs/:section/index.html                                              /docs/:section/:section
/docs/:section/index                                                   /docs/:section/:section
/docs/:section/                                                        /docs/:section/:section

# with one subsection, i. e. docs/products/cassandra/cassandra.html
/docs/:section/:subsection/index.html                                  /docs/:section/:subsection/:subsection
/docs/:section/:subsection/index                                       /docs/:section/:subsection/:subsection
/docs/:section/:subsection/                                            /docs/:section/:subsection/:subsection

# with a subsubsection, i. e. docs/products/opensearch/dashboards/dashboards.rst
/docs/:section/:subsection/:subsubsection/index.html                   /docs/:section/:subsection/:subsubsection/:subsubsection
/docs/:section/:subsection/:subsubsection/index                        /docs/:section/:subsection/:subsubsection/:subsubsection
/docs/:section/:subsection/:subsubsection/                             /docs/:section/:subsection/:subsubsection/:subsubsection

